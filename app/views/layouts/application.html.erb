<!DOCTYPE html>
<html>
<head>
  <title>Desafio de programação 1</title>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="<%= root_path %>">Desafio</a>
        <div class="nav-collapse">
          <ul class="nav">
            <% if user_signed_in? %>
              <li><%= link_to "Faturamento", new_order_path %></li>
            <% else %>
              <li><%= link_to "Entrar", new_user_session_path %></li>
              <li><%= link_to "Cadastrar", new_user_registration_path %></li>
            <% end %>
          </ul>

          <% if user_signed_in? %>
            <ul class="nav pull-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %><b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Editar conta", edit_user_registration_path %></li>
                  <li><%= link_to "Sair", destroy_user_session_path, :method => :delete %></li>
                </ul>
              </li>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
  </div>


<div class="container">
	<%= render "shared/flash_messages" %>
	<%= yield %>
</div>

</body>
</html>
